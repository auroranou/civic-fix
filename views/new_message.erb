<form action='/new_message/<%= @current_user.id %>' method='post'>
	<select name="action">
		<% @actions.each do |a| %>
			<option name ="action" value="<%= a %>"><%= a %></option>
		<% end %>
	</select>

	<input type="email" name="mail_from" placeholder="Your email address">
	<input type="text" name="subject" placeholder="Subject">
	<div class="textarea"><input type="text" name="body" placeholder="Your message here."></div>
	<input type="submit" value="Send!">
</form>